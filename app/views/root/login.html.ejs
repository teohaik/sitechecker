<%# { "layout":"/views/shared/empty.html.ejs", "title":"Login Page" } %>
<div class="col-md-push-3 col-md-6" style="margin-top: 5%">
    <div class="panel panel-primary">
        <div class="panel-heading text-center">
            <i style="font-size: 96px" class="material-icons">&#xE7FD;</i>

        </div>
        <div class="panel-body">
            <form accept-charset="UTF-8" role="form" id="login-form" method="post" action="<%=context.request.url%>">
                <p>Type your username and password to login:</p>
                <fieldset>
                    <%- locals.html.antiforgery() %>
                    <div class="form-group">
                        <input tabindex="0" class="form-control" placeholder="Username" name="username">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password">
                    </div>
                    <% if (locals.data.message) { %>
                    <div class="row form-group">
                        <div class="col-xs-12">
                            <span class="text-danger h5"><%= locals.data.message %></span>
                        </div>
                    </div>
                    <% } %>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Login
                        </button>
                        <p class="help-block">
                            <span class="pull-left"><small>Don't have an account?&nbsp;</small><a class="text-muted" href="#"><small>Sign up here</small></a></span>
                        </p>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
